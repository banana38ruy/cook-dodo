              
<%= form_with model: @recipe, url: user_recipes_path(:user_id), method: :post, id: 'new_message', local: true do |f| %>
  
  <div>
   <label class="form-text">タイトル</label>
   <%= f.text_field :title, class:"#", id:"#", placeholder: "料理名をご記入ください", autofocus: true %>
  </div>

  <div>
   <label class="#">料理の画像</label>
   <%= f.file_field :image, id: 'message_image' %>
  </div>
    
  <div>   
   <label class="#">内容</label>
   <%= f.text_area :content, size: "24x6", class:"#", id:"#", placeholder: 'レシピの説明を入力してください' %>
  </div>
  
  
  <div>   
   <label class="#">内容</label>
   <%= f.text_field :material_name, class:"#", id:"#", placeholder: '材料名を入力してください' %>
   <label class="#">内容</label>
   <%= f.text_field :quantity_name, class:"#", id:"#", placeholder: '分量を入力してください' %>
   <label class="#">内容</label>
   <%= f.collection_select(:quantity_id, Quantity.all, :id, :name, {}, {class:"quantitiy-select"}) %>
  </div>
  
  
  
 
 
 
 
 
 
 
  <%= f.submit '送信' %>
  <div id="image-list"></div>
<% end%>
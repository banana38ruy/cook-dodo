<div class="container index_con"> 
    <div class="row index-row">
        <% @recipes.each do |recipe| %>
        <div class="col">
          <div class="card h-100 w-280 text-center" style="width: 18rem;">
            <%= link_to image_tag("#{recipe.image}", class:"card-img-top"), recipe, method: :get %>
            <div class="card-body index_body">
              <h4 class="card-title"><%= recipe.title %></h4>
              <h6 class="user_name">by <%= recipe.user.nickname %></h6>
            </div>
          </div> 
        </div> 
        <% end %>  
      </div>       
   </div>
</div>